@model IEnumerable<WebOdevi.Models.Post>

@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Post</h2>

<p>
    @Html.ActionLink("Create New", "PostCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cat.CatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Context)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reads)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cat.CatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (item.Context.Length > 150)
            {
                <p>@Html.Raw(item.Context.Substring(0, 100)) ... </p>
            }
            else
            {
                <p>@item.Context ... </p>
            }
            @*@Html.DisplayFor(modelItem => item.Context)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reads)
        </td>
        <td>
            @Html.ActionLink("Edit", "PostEdit", new { id=item.PostId }) |
            <a href="/Home/Post/@item.PostId">Details</a>|
            @Html.ActionLink("Delete", "PostDelete", new { id=item.PostId })
        </td>
    </tr>
}

</table>
